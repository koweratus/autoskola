@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Input.FirstName"for="firstname"></label>
                <input asp-for="Input.FirstName" id="firstname" class="form-control"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="Input.LastName" for="lastname"></label>
                <input asp-for="Input.LastName" id="lastname" class="form-control"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="DrivingSchool"></label>
                <input asp-for="DrivingSchool.Name"  class="form-control" disabled/>
                <span asp-validation-for="DrivingSchool.Name" class="text-danger"></span>

            </div>   
            <div class="form-group ">
                <label asp-for="Car"></label>
                <input asp-for="Car.Brand"  
                       class="form-control" disabled/>
                <span asp-validation-for="Car.Brand" class="text-danger"></span>

            </div>
       
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}