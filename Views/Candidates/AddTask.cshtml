@model CoksaProject.ViewModels.CandidateTasksCreateViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-controller="Candidates" asp-action="AddTask" method="post">
    <div class="form-group">
        <label asp-for="TasksID"></label>
        <select   class=" form-control" 
        asp-for="TasksID" asp-items="Model.Tasks"></select>
        <span asp-validation-for="TasksID"></span>
    </div>
      <div class="form-group row">
            <div class="col-sm-10">
            
                <input type="hidden"class="form-control" asp-for="Horas"/>
            </div>
        </div>
        <span asp-validation-for="Horas" class="text-danger"></span>

    <input type="hidden" name="CandidateID" value="@Model.Candidate.ID"/>
     <div>
            <button type="submit" class="btn 
            btn-info">Save</button>
            <a asp-controller="Candidates" asp-action="Index" 
            class="btn btn-info">Back</a>
        </div>
</form>
