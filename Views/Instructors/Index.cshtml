@model IEnumerable<CoksaProject.Models.ApplicationUser>

@{
    ViewBag.Title = "All Instructors";
}

<h1>All Instructors</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
            @*<div class="card-header">
               Driving School : @user.DrivingSchool
            </div>*@
            <div class="card-body">
                <h5 class="card-title">@user.FirstName 
                @user.LastName</h5>
            </div>

            <div class="card-footer">
                <a asp-action="ViewInstructor" asp-controller="Instructors"
                   asp-route-id="@user.Id" class="btn btn-info">
                    Details
                </a>
              
            </div>
            

        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            @*<a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Add new user
            </a>*@
        </div>
    </div>
}